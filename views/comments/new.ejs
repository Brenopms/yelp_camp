<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center;">Create a new comment to <%= campground.name %></h1>
	<div style="width: 30%; margin: 20px auto;">
		<form action="/campgrounds/<%=campground.id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text"></div>
			<div class="form-group">
				<button class="btn btn-lg btn-default btn-success btn-block">Submit!</button>
			</div>
		</form>
		<a href="/campgrounds/<%=campground.id %>"> Go Back</a>
	</div>
</div>

<% include ../partials/footer %>